{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "disableSizeLimit": true,
        "target": "es2017",
        "module": "commonjs",
        "downlevelIteration": true,
        "jsx": "react",
        "checkJs": true,
        "baseUrl": ".",
        "paths": {
            "src": ["./src"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "typeAcquisition": {
        "include": ["react"]
    }
}
